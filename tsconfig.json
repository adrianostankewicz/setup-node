{
  "compilerOptions": {
    "target": "ES2022",                                  
     "lib": ["ES2022"],                                        
     "experimentalDecorators": true,                   
     "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
     "rootDir": "./src",                                  
     "typeRoots": [
      "./node-modules/@types",
      "./src/@types"
     ],                                  
     "resolveJsonModule": true,                        
     "allowJs": true,                                  
     "outDir": "./dist",                                   
     "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"]
    }                                 
  }
}
